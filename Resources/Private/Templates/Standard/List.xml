<f:layout name="Default.xml" />
<f:section name="Content">
<standard>
	<resentCup>
		<name>{recentCup.name}</name>
		<link rel="show" href="{f:uri.action(arguments: '{cup: recentCup}', absolute: 1, controller: 'Cup', action: 'show', format: 'xml')}" />
		<matches>
			<groupMatch>
				<link rel="show" href="{f:uri.action(arguments: '{cup: recentCup}', absolute: 1, controller: 'GroupMatch', action: 'list', format: 'xml')}" />
			</groupMatch>
			<groupRound>
			<link rel="show" href="{f:uri.action(arguments: '{cup: recentCup}', absolute: 1, controller: 'GroupRound', action: 'list', format: 'xml')}" />
			</groupRound>
			<koRound>
			<link rel="show" href="{f:uri.action(arguments: '{cup: recentCup}', absolute: 1, controller: 'KoRound', action: 'list', format: 'xml')}" />
			</koRound>
		</matches>
	</resentCup>
	<cups><f:for each="{cups}" as="cup">
		<cup>
			<name>{cup.name}</name>
			<link rel="show" href="{f:uri.action(arguments: '{cup: cup}', absolute: 1, controller: 'Cup', action: 'show', format: 'xml')}" />
		</cup>
	</f:for></cups>
</standard>
</f:section>
