resources:
  methods:
    AchimFritz_ChampionShipEditMethods: 'method(AchimFritz\ChampionShip\Controller\.*Controller->editAction())'
    AchimFritz_ChampionShipDeleteMethods: 'method(AchimFritz\ChampionShip\Controller\.*Controller->deleteAction())'
    AchimFritz_ChampionShipNewMethods: 'method(AchimFritz\ChampionShip\Controller\.*Controller->newAction())'
    AchimFritz_ChampionShipTipMethods: 'method(AchimFritz\ChampionShip\Controller\TipController->.*())'
    AchimFritz_ChampionShipUserController: 'method(AchimFritz\ChampionShip\Controller\UserController->.*())'
    AchimFritz_ChampionShipTipGroupController: 'method(AchimFritz\ChampionShip\Controller\TipGroupController->.*())'
    AchimFritz_ChampionShipTipCreatorController: 'method(AchimFritz\ChampionShip\Controller\TipCreatorController->.*())'
  entities:
   'TYPO3\Flow\Security\Account':
     TYPO3_Flow_Account_Me: 'current.securityContext.account == this'
   'AachimFritz\ChampionShip\Domain\Model\Tip':
     TYPO3_Flow_Account_All: 'ANY'
     TYPO3_Flow_Account_Me: 'current.securityContext.account == this.user.account'

roles:
  Administrator: []
  User: []

acls:
  User:
    methods: 
      AchimFritz_ChampionShipTipMethods: GRANT
    entities:
      TYPO3_Flow_Account_Me: GRANT
  Administrator:
    entities:
      TYPO3_Flow_Account_All: GRANT
    methods:
      AchimFritz_ChampionShipEditMethods: GRANT
      AchimFritz_ChampionShipDeleteMethods: GRANT
      AchimFritz_ChampionShipNewMethods: GRANT
      AchimFritz_ChampionShipTipGroupController: GRANT
      AchimFritz_ChampionShipTipCreatorController: GRANT
      AchimFritz_ChampionShipUserController: GRANT
